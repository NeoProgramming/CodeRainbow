<Window x:Class="CodeRainbow.InputDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDlg" Height="87" Width="462">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Stretch" Name="textLink" VerticalAlignment="Stretch" Grid.Row="0" FontFamily="Courier New" FontSize="14" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="Cancel" IsCancel="true" HorizontalAlignment="Left" Name="buttonCancel" VerticalAlignment="Stretch" Width="80" Click="buttonCancel_Click" />
            <Button Content="OK" HorizontalAlignment="Left" Name="buttonOk" VerticalAlignment="Stretch" Width="80" Click="buttonOk_Click" IsDefault="True"  />
        </StackPanel>
        
    </Grid>
</Window>
