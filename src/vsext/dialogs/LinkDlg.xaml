<Window x:Class="CodeRainbow.LinkDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LinkDlg" Height="105" Width="462">
    <Grid Width="400" Height="60">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Stretch" Name="textLink" VerticalAlignment="Stretch" Grid.Row="0" FontFamily="Courier New" FontSize="14" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Open" HorizontalAlignment="Stretch" Name="buttonOpen" VerticalAlignment="Stretch" Click="buttonOpen_Click" Width="80" />
            <Button Content="OK"   HorizontalAlignment="Stretch" Name="buttonOk" VerticalAlignment="Stretch" Click="buttonOk_Click" IsDefault="True" Width="80" />
            <Button Content="Cancel" IsCancel="true" HorizontalAlignment="Stretch" Name="buttonCancel" VerticalAlignment="Stretch" Click="buttonCancel_Click" Width="80" />
            <Button Content="Select" Grid.Column="1" HorizontalAlignment="Stretch" Name="buttonSelect" VerticalAlignment="Stretch" Click="buttonSelect_Click" Width="80" />
            <Button Content="Paste" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Name="buttonPaste" VerticalAlignment="Stretch" Click="buttonPaste_Click" Width="80" />
        </StackPanel>
    </Grid>
</Window>
