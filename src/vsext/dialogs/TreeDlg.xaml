<Window x:Class="CodeRainbow.TreeDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TreeDlg" Height="282" Width="311">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <TreeView Grid.Row="0" HorizontalAlignment="Stretch" Name="treeView" VerticalAlignment="Stretch" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" FlowDirection="RightToLeft">
            <Button Content="Cancel" IsCancel="true" HorizontalAlignment="Stretch" Name="buttonCancel" VerticalAlignment="Stretch" Click="buttonCancel_Click" Width="80" />
            <Button Content="OK" HorizontalAlignment="Stretch" Name="buttonOk" VerticalAlignment="Stretch" Click="buttonOk_Click" IsDefault="True" Width="80" />
            <Button Content="Set Active" HorizontalAlignment="Stretch" Name="buttonActive" VerticalAlignment="Stretch" IsDefault="True" Width="80" Click="buttonActive_Click" />
        </StackPanel>
    </Grid>
</Window>
